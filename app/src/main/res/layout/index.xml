<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--顶部菜单-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#393A3F"
        android:padding="12dp"
        android:id="@+id/wechat_main_top_title">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="微信"
            android:textSize="20sp"
            android:textColor="#fff"/>

        <ImageButton
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/select"
            android:layout_marginRight="30dp"/>
        <ImageButton
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/add"
            android:layout_marginRight="10dp"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/wechat_main_top_title"
        android:layout_above="@+id/wechat_main_buttom_menu">

        <ImageView
            android:src="@mipmap/body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>

    <!--底部菜单-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="#fff"
        android:id="@+id/wechat_main_buttom_menu">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ddd"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <ImageButton
                android:background="#00000000"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@mipmap/index"
                android:layout_gravity="center"/>
            <ImageButton
                android:background="#00000000"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@mipmap/tongxun"
                android:layout_gravity="center"/>
            <ImageButton
                android:background="#00000000"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@mipmap/faxian"
                android:layout_gravity="center"/>
            <ImageButton
                android:background="#00000000"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@mipmap/me"
                android:layout_gravity="center"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>